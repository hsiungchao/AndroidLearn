<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/globalPadding"
    tools:context=".ui.ToastActivity">

    <Button
        android:id="@+id/btn_default_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="默认" />

    <Button
        android:id="@+id/btn_change_location_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="改变位置" />

    <Button
        android:id="@+id/btn_customize_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="带图片（自定义）" />

    <Button
        android:id="@+id/btn_util_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ToastUtil"
        android:textAllCaps="false" />

</LinearLayout>